{
  "name": "Bitcointalk Script",
  "short_name": "Bitcointalk-Script",
  "version": "2.5",
  "manifest_version": 3,
  "description": "Extension specific to Bitcointalk - Synthesis script, all in one",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Bitcointalk Script",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.bitcointalk.org/*",
        "http://*.bitcointalk.org/*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "host_permissions": [
    "https://*.bitcointalk.org/*",
    "http://*.bitcointalk.org/*"
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/bitcointalk/*.css",
        "icons/*.png"
      ],
      "matches": [
        "https://*.bitcointalk.org/*",
        "http://*.bitcointalk.org/*"
      ]
    }
  ]
}